doctype html
html(ng-app="PartyFinance")
    head
        title(ng-bind="'PartyFinance - ' + $state.current.title") PartyFinance - Hello :-)
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/plugins/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/plugins/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/styles.min.css')
        link(rel='stylesheet', href='/resources/fonts/fonts.css')
    body
        .wrapper
            nav.navbar.navbar-fixed-top
                .container-fluid
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(ui-sref='start') PartyFinance
                    #navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li(ng-show='user')
                                a(ui-sref='panel') Panel
                            //li.dropdown
                            //    a.dropdown-toggle(href='#', data-toggle='dropdown', role='button')
                            //        | Dropdown
                            //        span.caret
                            //    ul.dropdown-menu
                            //        li
                            //            a(href='#') Action
                            //        li
                            //            a(href='#') Another action
                            //        li
                            //            a(href='#') Something else here
                            //        li.divider(role='separator')
                            //        li
                            //            a(href='#') Separated link
                            //        li.divider(role='separator')
                            //        li
                            //            a(href='#') One more separated link
                        ul.nav.navbar-nav.navbar-right(ng-hide="user")
                            li
                                a(ui-sref='login') {{'Login' | translate}}
                            li
                                a(ui-sref='register') {{'Register' | translate}}
                        ul.nav.navbar-nav.navbar-right(ng-show="user")
                            li
                                .nav-text {{'Connected as' | translate}} {{user.username}}
                            li
                                a(ng-click="disconnectUser()")  {{'Disconnect' | translate}}
            ui-view.fade-in-up(ng-class='$state.current.name')
            footer
                .container
                    .col-xs-4.col-sm-3
                        ul
                            li
                                a(ui-sref="start") {{'Start Page' | translate}}
                            li
                                a(ui-sref="start" anchor-smooth-scroll="seemorethere") {{'More infos' | translate}}
                            li
                                a(ui-sref="start" anchor-smooth-scroll="whydude") {{'But, who are you ?!' | translate}}
                    .col-xs-4.col-sm-3
                        ul
                            li
                                a(ui-sref="panel") Panel
                            li
                                a(ui-sref="login") {{'Login' | translate}}
                            li
                                a(ui-sref="register") {{'Register' | translate}}
                    .col-xs-4.col-sm-3
                        ul
                            li
                                a(ui-sref="contact") Contact
                            li
                                a(href="https://github.com/maxaille/PartyFinance") Github
                            li
                                a(href="http://bit.ly/1KuJBKF") Fax
// Lib
script(src='/plugins/jquery/dist/jquery.js')
script(src='/plugins/bootstrap/dist/js/bootstrap.js')

// Angular
script(src='/plugins/angular/angular.js')
script(src='/plugins/angular-resource/angular-resource.min.js')
script(src='/plugins/angular-bootstrap/ui-bootstrap-tpls.min.js')
script(src='/plugins/angular-ui-router/release/angular-ui-router.js')
script(src='/plugins/angular-translate/angular-translate.min.js')
script(src='/plugins/angular-translate-loader-static-files/angular-translate-loader-static-files.min.js')
script(src='/plugins/ngFlowGrid/src/ngFlowGrid.js')

// Application
script(src='/js/app.js')
