section.main
    .container
        .row
            .col-xs-12
                header
                    h1 Party Finance
                    hr.short
                    h4 {{'Manage the costs of all your parties easily !' | translate}}
                    hr.short
                    a(anchor-smooth-scroll="seemorethere")
                        button.btn.btn-primary {{'See more' | translate}}
                    a(ui-sref="panel")
                        button.btn.btn-info {{'Go to the panel' | translate}}
section.stripped#seemorethere
    .container
        .row
            .col-sm-8
                h1 PARTY !!
                h4
                    | {{"Create, organize, invite your friends and put the beers in the fridge." | translate}}
                    br
                    | {{"We will take care of the math for you :-)" | translate}}
            .col-sm-4.beer-fridge
                .beer(ng-repeat="i in (((b=[]).length=51)&&b) track by $index")
                    .mousse-s-il-vous-plait -
                    i.fa.fa-beer.big
section.stripped
    .container
        .row
            .col-xs-12.col-sm-8.align-right-sm.col-sm-push-4
                h1 {{'Divides automatically' | translate}}
                h4
                    | {{"Give the amount of money that each person owe you, based on your own criteria." | translate}}
                    | {{"You can set a base cost, for tenancies for example, or specific criteria like food, drinks etc. for each participants" | translate}}
